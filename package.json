{
  "name": "plugin-importer",
  "version": "0.1.2",
  "description": "Recursively imports a plugin tree in order of dependencies",
  "homepage": "http://github.com/voxpelli/plugin-importer",
  "repository": {
    "type": "git",
    "url": "git://github.com/voxpelli/plugin-importer.git"
  },
  "keywords": [
    "plugins"
  ],
  "author": "Pelle Wessman <pelle@kodfabrik.se> (http://kodfabrik.se/)",
  "license": "MIT",
  "engines": {
    "node": ">=18.6.0"
  },
  "type": "module",
  "exports": "./index.js",
  "types": "index.d.ts",
  "files": [
    "/index.js",
    "/index.d.ts",
    "/index.d.ts.map",
    "lib/*.js",
    "lib/*.d.ts",
    "lib/*.d.ts.map"
  ],
  "scripts": {
    "build:0": "run-s clean",
    "build:1-declaration": "tsc -p declaration.tsconfig.json",
    "build": "run-s build:*",
    "check:installed-check": "installed-check -i @voxpelli/eslint-config -i eslint -i npm-run-all2",
    "check:knip": "knip",
    "check:lint": "eslint --report-unused-disable-directives .",
    "check:tsc": "tsc",
    "check:type-coverage": "type-coverage --detail --strict --at-least 99 --ignore-files 'test/*'",
    "check": "run-s clean && run-p check:*",
    "clean:declarations-top": "rm -rf $(find . -maxdepth 1 -type f -name '*.d.ts*' ! -name 'advanced-types.d.ts' ! -name 'index.d.ts')",
    "clean:declarations-lib": "rm -rf $(find lib -type f -name '*.d.ts*' ! -name 'advanced-types.d.ts')",
    "clean": "run-p clean:*",
    "prepare": "husky",
    "prepublishOnly": "run-s build",
    "test:node": "c8 --reporter=lcov --reporter text node --test --test-reporter=@voxpelli/node-test-pretty-reporter",
    "test-ci": "run-s test:*",
    "test": "run-s check test:*"
  },
  "dependencies": {
    "@hapi/topo": "^6.0.2"
  },
  "devDependencies": {
    "@types/node": "^18.19.65",
    "@types/sinon": "^17.0.3",
    "@voxpelli/eslint-config": "^22.1.0",
    "@voxpelli/node-test-pretty-reporter": "^1.1.2",
    "@voxpelli/tsconfig": "^15.1.0",
    "c8": "^10.1.2",
    "desm": "^1.3.1",
    "eslint": "^9.15.0",
    "husky": "^9.1.7",
    "installed-check": "^9.3.0",
    "knip": "^5.37.2",
    "npm-run-all2": "^7.0.1",
    "sinon": "^19.0.2",
    "type-coverage": "^2.29.7",
    "typescript": "~5.7.2",
    "validate-conventional-commit": "^1.0.4"
  }
}
